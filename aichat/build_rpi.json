{
  "entry": "main.py",
  "name": "xiaozhi",
  "display_name": "XiaoZhi AI",
  "version": "1.1.9",
  "icon": "assets/icon.png",
  "pyinstaller": {
    "onefile": false,
    "windowed": false,
    "console": true,
    "add_data": [
      "models:models",
      "scripts:scripts",
      "src:src",
      "libs:libs",
      "assets:assets",
      "config:config"
    ],
    "hidden_imports": [
      "src.application",
      "src.utils.logging_config",
      "src.core.system_initializer",
      "src.protocols.websocket_protocol",
      "src.protocols.mqtt_protocol",
      "src.audio_codecs.audio_codec",
      "src.audio_codecs.aec_processor",
      "src.display.cli_display",
      "src.plugins.manager",
      "engineio.async_drivers.aiohttp",
      "aiohttp"
    ],
    "excludes": [
      "tkinter",
      "matplotlib",
      "scipy",
      "pandas"
    ],
    "clean": true,
    "noconfirm": true,
    "strip": true,
    "noupx": true
  },
  "platforms": {
    "linux": {
      "formats": [
        "deb"
      ],
      "deb": {
        "package": "xiaozhi",
        "section": "utils",
        "priority": "optional",
        "architecture": "armhf",
        "description": "XiaoZhi AI Assistant for Raspberry Pi",
        "desktop_entry": true,
        "categories": [
          "Utility",
          "Audio"
        ],
        "depends": [
          "libasound2",
          "libportaudio2",
          "libopus0",
          "python3"
        ]
      }
    }
  }
}

